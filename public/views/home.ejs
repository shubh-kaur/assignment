<body>
  
  <div class="navbar bg-base-100">
    <%- include('partials/navbar') %>
  </div>

  <!--  -->
  
  <div class="container ">


    <div class="hero bg-base-200 p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Welcome</h1>

          <p class="py-6">Unleash your inner builder and embark on a fascinating journey through the colorful realm of Lego.</p>
      
          <a href="http://localhost:3000/lego/sets" class="bg-blue-100 text-gray-600 py-2 px-4 rounded-full hover:bg-blue-200 hover:text-gray-700 focus:outline-none focus:ring focus:border-transparent">Get Started Now</a>
        </div>
      </div>
    </div>

    <br>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
